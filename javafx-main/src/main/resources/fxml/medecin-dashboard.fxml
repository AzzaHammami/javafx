<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controller.MedecinDashboardController"
      stylesheets="@../styles/dashboard.css"
      prefHeight="800.0" prefWidth="1200.0">

    <!-- Menu latéral -->
    <VBox styleClass="sidebar">
        <VBox alignment="CENTER" spacing="10" styleClass="sidebar-header">
            <Circle radius="20" styleClass="logo-circle"/>
            <Label text="MaSanté" styleClass="logo-text"/>
        </VBox>

        <VBox spacing="5" styleClass="menu-items" VBox.vgrow="ALWAYS">
            <Button text="Tableau de bord" styleClass="menu-button, active-menu-button">
                <graphic>
                    <Region styleClass="dashboard-icon"/>
                </graphic>
            </Button>
            <Button text="Mes Patients" styleClass="menu-button">
                <graphic>
                    <Region styleClass="patients-icon"/>
                </graphic>
            </Button>
            <Button text="Rendez-vous" styleClass="menu-button">
                <graphic>
                    <Region styleClass="appointments-icon"/>
                </graphic>
            </Button>
            <Button text="Documents" styleClass="menu-button">
                <graphic>
                    <Region styleClass="documents-icon"/>
                </graphic>
            </Button>
        </VBox>

        <Button text="Déconnexion" styleClass="menu-button, logout-button" onAction="#handleLogout">
            <graphic>
                <Region styleClass="logout-icon"/>
            </graphic>
        </Button>
    </VBox>

    <!-- Contenu principal -->
    <VBox HBox.hgrow="ALWAYS" styleClass="main-content">
        <!-- En-tête -->
        <HBox styleClass="header">
            <Label text="Tableau de bord" styleClass="page-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Circle fx:id="userAvatar" radius="20" styleClass="user-avatar"/>
        </HBox>

        <!-- Message de bienvenue -->
        <VBox styleClass="welcome-section">
            <Label fx:id="welcomeLabel" styleClass="welcome-text" wrapText="true"/>
        </VBox>

        <!-- Cartes d'information -->
        <HBox spacing="20" styleClass="stats-cards">
            <!-- Carte Patients -->
            <VBox styleClass="stat-card">
                <Label text="Mes Patients" styleClass="stat-title"/>
                <Label fx:id="totalPatientsLabel" text="0" styleClass="stat-value"/>
            </VBox>

            <!-- Carte Rendez-vous -->
            <VBox styleClass="stat-card">
                <Label text="Rendez-vous du jour" styleClass="stat-title"/>
                <Label fx:id="todayAppointmentsLabel" text="0" styleClass="stat-value"/>
            </VBox>

            <!-- Carte Consultations -->
            <VBox styleClass="stat-card">
                <Label text="Consultations du mois" styleClass="stat-title"/>
                <Label fx:id="monthlyConsultationsLabel" text="0" styleClass="stat-value"/>
            </VBox>
        </HBox>

        <!-- Section Prochains rendez-vous -->
        <VBox spacing="10" VBox.vgrow="ALWAYS" styleClass="appointments-section">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Prochains rendez-vous" styleClass="section-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="+ Nouveau RDV" styleClass="add-button"/>
            </HBox>

            <TableView fx:id="appointmentsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="patientColumn" text="Patient" prefWidth="150"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="timeColumn" text="Heure" prefWidth="100"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="150"/>
                    <TableColumn fx:id="statusColumn" text="Statut" prefWidth="100"/>
                </columns>
                <placeholder>
                    <Label text="Aucun rendez-vous prévu"/>
                </placeholder>
            </TableView>
        </VBox>
    </VBox>
</HBox> 