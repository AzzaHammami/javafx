<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane minWidth="900" minHeight="600" prefWidth="1200" prefHeight="800" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.Back.ReponseController"
            stylesheets="/styles/theme.css">
    <VBox spacing="20" BorderPane.topAnchor="0" BorderPane.leftAnchor="0" 
          BorderPane.rightAnchor="0" BorderPane.bottomAnchor="0">
        
        <!-- En-tête -->
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
            <Button text="Retour" onAction="#handleRetourHome" styleClass="btn-primary"/>
            <Text text="Gestion des Réponses" styleClass="header-label"/>
        </HBox>

        <!-- Contenu principal -->
        <HBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Liste des réponses -->
            <VBox HBox.hgrow="ALWAYS" spacing="10">
                <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="contenuColumn" text="Contenu" prefWidth="400"/>
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                        <TableColumn fx:id="reclamationColumn" text="Réclamation" prefWidth="200"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Formulaire -->
            <VBox styleClass="form-container" spacing="15" prefWidth="400">
                <Text text="Gestion des réponses" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                
                <VBox spacing="5">
                    <Label text="Réclamation"/>
                    <ComboBox fx:id="reclamationComboBox"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Contenu"/>
                    <TextArea fx:id="contenuField" promptText="Entrez la réponse" 
                             prefRowCount="4" wrapText="true"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Date"/>
                    <DatePicker fx:id="datePicker"/>
                </VBox>
                
                <HBox spacing="10">
                    <Button text="Ajouter" onAction="#handleAddReponse"/>
                    <Button text="Modifier" onAction="#handleUpdateReponse"/>
                    <Button text="Supprimer" onAction="#handleDeleteReponse" styleClass="delete"/>
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</BorderPane>
