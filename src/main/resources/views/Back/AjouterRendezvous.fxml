<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rendez_vous.controllers.Back.RendezVousController" style="-fx-background-color:transparent;">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 20 30 10 30;">
            <TextField fx:id="searchField" promptText="Rechercher..." prefWidth="220" />
            <ComboBox fx:id="metierCombo" promptText="Par métier" prefWidth="150" />
            <ComboBox fx:id="sortCombo" promptText="Trier par" prefWidth="120" />
        </HBox>
    </top>
    <center>
        <VBox>
            <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color:transparent;" HBox.hgrow="ALWAYS">
                <content>
                    <VBox fx:id="cardContainer" spacing="16" alignment="TOP_CENTER" style="-fx-padding: 0;" fillWidth="true">
                        <ComboBox fx:id="patientComboBox" promptText="Sélectionnez un patient" />
                        <ComboBox fx:id="medecinComboBox" promptText="Sélectionnez un médecin" />
                    </VBox>
                </content>
            </ScrollPane>
            <HBox fx:id="paginationBox" alignment="CENTER" spacing="8" style="-fx-padding: 16 0 0 0;" />
        </VBox>
    </center>
</BorderPane>
