<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f5f6fa;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.rendez_vous.controllers.Back.DisponibiliteController">
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #4834d4;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="Gestion des Disponibilités" />
        </VBox>
    </top>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox alignment="CENTER" spacing="20">
                <padding>
                    <Insets bottom="30" left="40" right="40" top="30" />
                </padding>
                <!-- Barre de tri et filtre statut (sans recherche) -->
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #fff; -fx-background-radius: 10; -fx-padding: 16 24 16 24; -fx-effect: dropshadow(gaussian, #d1d8e0, 4, 0.09, 0, 1);">
                    <ComboBox fx:id="sortCombo" promptText="Trier par: Date" style="-fx-background-radius: 7; -fx-pref-width: 140;" />
                    <ComboBox fx:id="orderCombo" promptText="Ordre" style="-fx-background-radius: 7; -fx-pref-width: 110;" />
                    <ComboBox fx:id="statutCombo" promptText="Statut: Tous" style="-fx-background-radius: 7; -fx-pref-width: 130;" />
                </HBox>

                <!-- Liste des cards -->
                <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="Infinity" maxWidth="Infinity" minHeight="400" prefHeight="400" style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 0;">
                    <FlowPane fx:id="cardContainer" alignment="CENTER" hgap="24" vgap="24" maxWidth="Infinity" prefWidth="1000" style="-fx-padding: 32 0 32 0;" >
                        <!-- Les cards des disponibilités seront ajoutées dynamiquement en Java -->
                    </FlowPane>
                </ScrollPane>

                <!-- Pagination -->
                <HBox fx:id="paginationBox" alignment="CENTER" spacing="8" style="-fx-padding: 14 0 0 0;" />

                <!-- Bouton d'ajout rapide -->
                <StackPane alignment="BOTTOM_RIGHT" style="-fx-padding: 0 18 0 0;">
                    <Button fx:id="addDisponibiliteBtn" text="+ Ajouter Disponibilité"
                        style="-fx-background-color: #44bd32;
                               -fx-text-fill: white;
                               -fx-font-size: 15px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 22;
                               -fx-min-width: 160px;
                               -fx-min-height: 38px;
                               -fx-max-width: 180px;
                               -fx-max-height: 40px;
                               -fx-cursor: hand;
                               -fx-effect: dropshadow(gaussian, #b0bec5, 6, 0.12, 0, 2);
                               -fx-border-color: #218c2a;
                               -fx-border-width: 1.3;
                               -fx-border-radius: 22;" />
                </StackPane>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
