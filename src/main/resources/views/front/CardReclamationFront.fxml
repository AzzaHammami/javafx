                            <Polyline points="7,17,7,7,17,7" stroke="#4958c5" strokeWidth="2" fill="transparent"/>
                            <Polyline points="7,7,17,7,17,17" stroke="#4958c5" strokeWidth="2" fill="transparent"/>
                            <Polyline points="9,15,15,9" stroke="#4958c5" strokeWidth="2.5" fill="transparent"/>
