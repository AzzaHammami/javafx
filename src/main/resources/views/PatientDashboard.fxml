<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.rendez_vous.controllers.Front.PatientDashboardController" prefWidth="800.0" prefHeight="600.0">
    <children>
        <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Mes Notifications" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="notifBadge" style="-fx-background-color: red; -fx-text-fill: white; -fx-padding: 2 6; -fx-background-radius: 10;"/>
                <Button fx:id="closeNotifBtn" text="×" style="-fx-background-color: transparent; -fx-font-size: 18px;"/>
            </HBox>
            
            <HBox spacing="10">
                <ToggleButton fx:id="toutesBtn" text="Toutes" selected="true" style="-fx-background-color: #e3f2fd;"/>
                <ToggleButton fx:id="nonLuesBtn" text="Non lues" style="-fx-background-color: #e0e0e0;"/>
                <ToggleButton fx:id="medicalesBtn" text="Médicales" style="-fx-background-color: #e0e0e0;"/>
                <ToggleButton fx:id="administrativesBtn" text="Administratives" style="-fx-background-color: #e0e0e0;"/>
            </HBox>
            
            <ScrollPane fitToWidth="true" maxHeight="400">
                <VBox fx:id="notificationBox" spacing="5">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>
